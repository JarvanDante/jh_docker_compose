server {
	listen		80;
	#server_name	127.0.0.1;
	server_name     dev.kg_wbgl.com;

	location / {
	    root            /var/www/html/tmewbgl-api/web;
            index           index.php;
	}



	location ^~ /wbgl-api {
	    alias /var/www/html/tmewbgl-api/web;
            index index.php;
	    if (!-e $request_filename) { rewrite ^ /wbgl-api/index.php last; }
	
	    location ~ .php$ {
	    if (!-f $request_filename) { return 404; }
	        include		fastcgi_params;
		fastcgi_param   SCRIPT_FILENAME $request_filename;
		fastcgi_pass    phpfpm:9000;
	    }
    
	}

	error_page 500 502 503 504 /50x.html;
	location = /50x.html {
	    root    html;
	}

	location ~ \.php$ {
            fastcgi_pass   phpfpm:9000;
            fastcgi_index  index.php;
            fastcgi_param  SCRIPT_FILENAME  /var/www/html/tmewbgl-api/web$fastcgi_script_name;
	    include        fastcgi_params;
        }


}
